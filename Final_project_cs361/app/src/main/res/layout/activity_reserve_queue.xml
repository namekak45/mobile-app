<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:padding="20dp"
    tools:context=".ReserveQueue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
        <!--            android:text="@string/dialog_header"-->

        <EditText
            android:id="@+id/dialog_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/dialog_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="#E8E0E0"
            android:textColorHint="#E8E0E0" />

        <Button
            android:id="@+id/button_booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:onClick="sendMessage"
            android:text="@string/dialog_submit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>